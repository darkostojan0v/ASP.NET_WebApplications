@using BurgerApp.Models.ViewModels

@model List<BurgerViewModel>

    <h3>@ViewData["Title"]</h3>


@for(int i=0; i<@Model.Count; i++)
{
    <partial name="~/Views/Shared/Partials/_BurgerDetailsPartial.cshtml" for="@Model[i]"/>
    <a asp-controller="Burger" asp-action="Index" asp-route-id="@Model[i].Id">See details</a>
}