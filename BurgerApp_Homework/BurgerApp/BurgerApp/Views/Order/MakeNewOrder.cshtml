@using BurgerApp.Models.ViewModels
@model  OrderViewModel


<h3>Make new order!</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="MakeNewOrder" method="post">
           <div class="form-group">
              <label asp-for="FullName" class="control-label"></label>
              <select class="form-control" asp-for="FullName" asp-items="@(new SelectList(ViewBag.Burgers,"Name", "Name"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="IsDelivered" class="control-label"></label>
                <input asp-for="IsDelivered" type="checkbox" />
            </div>
            <button type="submit" class="btn btn-default">Save</button>
        </form>
    </div>
</div>